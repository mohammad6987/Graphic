<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="view.LoginMenuController"
            stylesheets="@../CSS/style1.css"
            styleClass="BackGround"
            prefHeight="700.0" prefWidth="570.0">

    <center>
        <VBox alignment="CENTER" spacing="20">
            <Label text="Aa" id="label"   styleClass="text-input"/>
            <TextField promptText="username" maxWidth="300" fx:id="username" />
            <PasswordField promptText="password" maxWidth="300" fx:id="password" />
            <HBox alignment="CENTER" spacing="20">
                <Button text="Login" style="-fx-background-color: transparent;" onMouseClicked="#submit"/>
                <Button text="Register" style="-fx-background-color: transparent;" onMouseClicked="#register"/>
            </HBox>
            <Button text="Guest" style="-fx-background-color: transparent;" onMouseClicked="#Play"/>
        </VBox>
    </center>

</BorderPane>
